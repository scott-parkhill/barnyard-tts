[Unit]
Description=Barnyard TTS
After=network.target

[Service]
User=cockatoo
Group=tts
WorkingDirectory=/home/cockatoo/barnyard-tts/
ExecStart=/home/cockatoo/barnyard-tts/venv/bin/gunicorn api:app \
  --workers 2 \
  --worker-class uvicorn.workers.UvicornWorker \
  --bind 127.0.0.1:8000 \
  --timeout 60

Restart=always
RestartSec=3

[Install]
WantedBy=multi-user.target
